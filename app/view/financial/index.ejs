<html>
	<head>
        <% include ./../partials/head %>
	</head>
	<body>
		<% include ./../partials/header %>
        <% include ./../partials/nav %>
		<section>
			<div class="container">
				<div class="box two ground margin-top-15 padding-10 center">
                    <h3 class="underline">Nova Receita</h3>
					<form id="financial-income-create-form" class="box one">
						<select class="btn-generic-big" name="income_category" onchange="this.options[this.selectedIndex].value && lib.fillSelect('Origem', 'financial-income-create-origin-select', '/financial/incomeorigin/filterbycategory?id='+this.options[this.selectedIndex].value, 'get');">
						    <option value="0">Categoria</option>
							<% for(i in incomeCategories){ %>
								<option value="<%= incomeCategories[i].id %>"><%= incomeCategories[i].name %></option>
							<% } %>
						</select>
						<select id="financial-income-create-origin-select" name="income_origin"class="btn-generic-big">
							<option value="0">Origem</option>
						</select>
						<input type="number" name="income_value" class="btn-generic-big price" step="0.01" value="0.00" onfocus="if(this.value < 0.01){this.value=''}" onblur="if(this.value < 0.01){this.value='0.00'}"/>
						<input type="text" name="income_obs" class="btn-generic-big" placeholder="Observação" maxlength="80" autocomplete="off" />
						<input type="submit" name="submit" class="btn-submit" value="Cadastrar">
					</form>
				</div>
				<div class="box two ground margin-top-15 padding-10 center">
                    <h3 class="underline">Nova Despesa</h3>
					<form id="financial-outcome-create-form" class="box one">
						<select class="btn-generic-big" name="outcome_category" id="financial-outcome-create-category-select" onchange="this.options[this.selectedIndex].value && lib.fillSelect('Origem', 'financial-outcome-create-origin-select', '/financial/outcomeorigin/filterbycategory?id='+this.options[this.selectedIndex].value, 'get');">
							<option value="0">Categoria</option>
							<% for(i in outcomeCategories){ %>
								<option value="<%= outcomeCategories[i].id %>"><%= outcomeCategories[i].name %></option>
							<% }%>
						</select>
						<select class="btn-generic-big" name="outcome_origin" id="financial-outcome-create-origin-select">
							<option value="0">Despesa</option>
						</select>
						<select class="btn-generic-big" name="outcome_payment">
						    <option value="0">Método de pagamento</option>
							<% for(i in incomeCategories){ %>
								<option value="<%= incomeCategories[i].id %>"><%= incomeCategories[i].name %></option>
							<% } %>
						</select>
						<input type="number" class="btn-generic-big price" name="outcome_value" step="0.01" value="0.00" onfocus="if(this.value < 0.01){this.value=''}" onblur="if(this.value < 0.01){this.value='0.00'}" />
						<input type="text" class="btn-generic-big" name="outcome_obs" placeholder="Observação" />
						<input type="submit" class="btn-submit" id="financial-outcome-create-submit" value="Cadastrar">
					</form>
				</div>

				<!-- BALANCE DIV -->

				<div class="box one ground margin-top-15 padding-10 center">
                    <h3 class="underline">Balanço</h3>
                    <h1 id="balance_value"></h1>
                    <form id="balance-report-form" class="box one">
						<input type="date" name="balance_periodStart" class="btn-generic-medium">
						<input type="date" name="balance_periodEnd" class="btn-generic-medium">
						<input type="submit" id="balance-report-submit" class="btn-submit" value="Filtrar">
					</form>
				</div>

				<!-- INCOME DIV -->

				<div class="box two ground margin-top-15 padding-10 center">
                    <h3 class="underline">Relatório de Entradas</h3>
					<form id="financial-income-filter-form" class="box one">
						<input type="date" name="periodStart" class="btn-generic-big">
						<input type="date" name="periodEnd" class="btn-generic-big">
	                    <select name="category_id" class="btn-generic-big" onchange="this.options[this.selectedIndex].value && lib.fillSelect('Origem', 'financial-income-report-origin-select', '/financial/incomeorigin/filterbycategory?id='+this.options[this.selectedIndex].value, 'get');">
						    <option value="0">Categoria</option>
							<% for(i in incomeCategories){ %>
								<option value="<%= incomeCategories[i].id %>"><%= incomeCategories[i].name %></option>
							<% } %>
						</select>
						<select id="financial-income-report-origin-select" name="origin_id" class="btn-generic-big">
							<option value="0">Origem</option>
						</select>
						<input type="submit" class="btn-submit" value="Filtrar">
					</form>
					<div id="financial-income-filter-box" class="box one padding-10">
                    	<h1 id="financial-income-filter-value" class="box one padding-10"></h1>
						<table class="tbl-info width-fill margin-top-5" id="financial-income-filter-table"></table>
        				<% include ./../partials/carousel %>
					</div>
					<div id="financial-income-show-box" class="box one ground padding-10 margin-top-10" style="display:none">
						<div id="financial-income-image-div" class="box"></div>
					</div>
				</div>

				<!-- INCOME DIV -->

				<div class="box two ground margin-top-15 padding-10 center">
                    <h3 class="underline">Relatório de Saídas</h3>
					<form id="financial-outcome-report-form" class="box one">
						<input type="date" class="btn-generic-big" name="outcome_periodStart">
						<input type="date" class="btn-generic-big" name="outcome_periodEnd">
	                    <select class="btn-generic-big" name="outcome_category" onchange="this.options[this.selectedIndex].value && lib.fillSelect('Origem', 'financial-outcome-report-origin-select', '/financial/outcomeorigin/filterbycategory?id='+this.options[this.selectedIndex].value, 'get');">
						    <option value="0">Categoria</option>
							<% for(i in outcomeCategories){ %>
								<option value="<%= outcomeCategories[i].id %>"><%= outcomeCategories[i].name %></option>
							<% } %>
						</select>
						<select class="btn-generic-big" name="outcome_origin" id="financial-outcome-report-origin-select">
							<option value="0">Origem</option>
						</select>
						<select class="btn-generic-big" name="outcome_payment">
						    <option value="0">Método de pagamento</option>
							<% for(i in incomeCategories){ %>
								<option value="<%= incomeCategories[i].id %>"><%= incomeCategories[i].name %></option>
							<% } %>
						</select>
						<input type="submit" class="btn-submit" id="financial-outcome-report-submit" value="Filtrar">
					</form>
                    <h1 id="outcome_totalValue"></h1>
					<div id="financial-outcome-report-div">
						<table class="tbl-info width-fill" id="financial-outcome-report-tbl"></table>
						<br>
						<button id="outcomeReportPrevious" autocomplete="off" disabled>&lsaquo;&lsaquo;</button>
	                    <span id="outcomeReportPageNumber"></span>
	                    <button id="outcomeReportNext" autocomplete="off" disabled>&rsaquo;&rsaquo;</button><br><br>
					</div>
				</div>

				<!-- Show Financial INCOME and OUTCOME -->
				<div class="box one ground padding-10 margin-top-10" id="financial-show-box" style="display:none">
					
				</div>
			</div>
		</section>
		<div id="ajax-loader" class="ajax-loader">
			<div class="loader"></div>
		</div>
	</body>
	<footer>
        <% include ./../partials/footer %>
        <% include ./partial %>

        <script>
        	//fill date inputs
        	lib.fillDateInput(document.getElementById("balance-report-form").elements.namedItem('balance_periodStart'));
        	lib.fillDateInput(document.getElementById("balance-report-form").elements.namedItem('balance_periodEnd'));

        	lib.fillDateInput(document.getElementById("financial-income-filter-form").elements.namedItem('periodStart'));
        	lib.fillDateInput(document.getElementById("financial-income-filter-form").elements.namedItem('periodEnd'));

        	lib.fillDateInput(document.getElementById("financial-outcome-report-form").elements.namedItem('outcome_periodStart'));
        	lib.fillDateInput(document.getElementById("financial-outcome-report-form").elements.namedItem('outcome_periodEnd'));
        </script>
	</footer>
</html>