<html>
	<head>
        <% include ./../partials/head %>
	</head>
	<body>
		<% include ./../partials/header %>
        <% include ./../partials/nav %>
		<section>
			<div class="container">
				<div class="box-1">
					<form id="product-filter-form" class="box-1">
						<input type="hidden" name="location" value="production-product">
						<input type="text" name="name" class="btn-generic-small" placeholder="Nome" autocomplete="off">
						<input type="text" name="code" class="btn-generic-small" placeholder="Cód" autocomplete="off">
						<select name="color" class="btn-generic-small" autocomplete="off">
							<option value="">Cor</option>
							<% for(i in productColors){ %>
								<option value="<%= productColors[i].shortcut %>"><%= productColors[i].name %></option>
							<% } %>
						</select>
						<input type="submit" class="btn-submit" value="Filtrar">
					</form>

					<form class="box-1" id="production-product-kart-form">
						<select name="product_id" class="btn-generic-big"></select>
						<input type="number" name="product_amount" class="btn-generic-small" placeholder="Qtd" min="1" max="9999" autocomplete="off"/>
						<input type="submit" class="btn-submit" id="product-production-kart-submit" value="Adicionar">
					</form>
					<table id="production-product-kart-tbl" class="tbl-info box-1"></table>
					<div class="box-1" id="product-production-simulation-box" style="display:none">
						<h3 class="underline bold">Simulação</h3>
						<table id="production-product-simulation-tbl" class="tbl-info box-1"></table>
					</div>
					<!-- <form id="product-production-preset" class="box-1">
						<input type="text" name="name" class="btn-generic-medium" placeholder="Nome da Pre-configuração">
						<input type="submit" name="submit" class="btn-submit" value="Salvar">
					</form> -->
					<form id="production-product-simulation" class="box-1">
						<select name="storage_id" class="btn-generic-medium">
							<option value="">Estoque</option>
							<% for(i in feedstockStorages){ %>
								<option value="<%= feedstockStorages[i].id %>"><%= feedstockStorages[i].name %></option>
							<% } %>
						</select>
						<input type="submit" name="submit" class="btn-submit" value="Simular">
					</form>
					<form id="production-product-form" class="box-1" style="display:none">
						<select name="storage_id" class="btn-generic-medium" hidden>
							<option value="">Estoque</option>
							<% for(i in feedstockStorages){ %>
								<option value="<%= feedstockStorages[i].id %>"><%= feedstockStorages[i].name %></option>
							<% } %>
						</select>
					</form>
				</div>
			</div>
		</section>
		<div id="ajax-loader" class="ajax-loader">
			<div class="loader"></div>
		</div>
	</body>
	<footer>
        <% include ./../partials/footer %>
        <% include ./partial %>
		<script src="/javascripts/scripts/production/controller/product.js"></script>
		<script src="/javascripts/scripts/production/controller/kart.js"></script>
		
		<script src="/javascripts/scripts/product/controller/main.js"></script>
		<script src="/javascripts/scripts/product/model/main.js"></script>
		<script src="/javascripts/scripts/product/view/main.js"></script>
	</footer>
</html>