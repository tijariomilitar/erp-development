<html>
	<head>
        <% include ./../partials/head %>
	</head>
	<body>
		<% include ./../partials/header %>
        <% include ./../partials/nav %>
		<section>
			<div class="container">
				<div class="box two container ground border center padding-10 margin-top-10">
					<h3 class="title-soft underline">Novo Produto</h3>
					<form id="product-create-form" class="box one container">
						<input type="hidden" name="id" value="0" autocomplete="off">
						<input type="number" name="code" class="box two input-generic margin-top-5 center" placeholder="Cód do produto" min="1" max="9999" autocomplete="off">
						<input type="text" name="name" class="box two input-generic margin-top-5 center" placeholder="Nome do produto" autocomplete="off" maxlength="30">
						<select name="color" class="box two input-generic margin-top-5 center" autocomplete="off">
							<option value="">Cor</option>
							<% for(i in productColors){ %>
								<option value="<%= productColors[i].shortcut %>"><%= productColors[i].name %></option>
							<% } %>
						</select>
						<select name="size" class="box two input-generic margin-top-5 center" autocomplete="off">
							<option value="">Tamanho</option>
							<option value="ST">Sem tamanho</option>
							<option value="PP">PP</option>
							<option value="P">P</option>
							<option value="M">M</option>
							<option value="XM">XM</option>
							<option value="G">G</option>
							<option value="XG">XG</option>
							<option value="GG">GG</option>
							<option value="XGG">XGG</option>
							<option value="XXG">XXG</option>
							<option value="XXGG">XXGG</option>
						</select>
						<select name="brand" class="box two input-generic margin-top-5 center" autocomplete="off">
							<option value="">Marca do Produto</option>
							<option value="Sem marca">Sem marca</option>
							<option value="J.A Rio Militar">J.A Rio Militar</option>
						</select>
						<select name="status" class="box two input-generic margin-top-5 center" autocomplete="off">
							<option value="">Status</option>
							<option value="Disponível">Disponível</option>
							<option value="Indisponível">Indisponível</option>
						</select>
						<input type="text" name="image" class="box two input-generic margin-top-5 center" placeholder="Imagem do produto" autocomplete="off" maxlength="200">
						<input type="submit" name="submit" class="box two submit-generic center box-hover margin-top-5 bold" value="Cadastrar">
					</form>
				</div>
				<div class="box two container ground border center padding-10 margin-top-10">
					<h3 class="title-soft underline">Buscar Produtos</h3>
					<form id="product-filter-form" class="box one container">
						<input type="hidden" name="location" value="product-manage" autocomplete="off">
						<input type="number" name="code" class="box two input-generic margin-top-5 center" placeholder="Cód" autocomplete="off">
						<input type="text" name="name" class="box two input-generic margin-top-5 center" placeholder="Nome" autocomplete="off">
						<select name="color" class="box two input-generic margin-top-5 center" autocomplete="off">
							<option value="">Cor</option>
							<% for(i in productColors){ %>
								<option value="<%= productColors[i].shortcut %>"><%= productColors[i].name %></option>
							<% } %>
						</select>
						<select name="brand" class="box two input-generic margin-top-5 center" autocomplete="off">
							<option value="">Marca do Produto</option>
							<option value="Sem marca">Sem marca</option>
							<option value="J.A Rio Militar">J.A Rio Militar</option>
						</select>
						<input type="submit" name="submit" class="box one submit-generic center box-hover margin-top-5 bold" value="Filtrar">
					</form>

					<div id="product-manage-filter-box" class="box one center ground padding-10 margin-top-10" style="display:none">
						<table class="tbl-info width-fill" id="product-manage-filter-table"></table>
        				<% include ./../partials/carousel %>
					</div>
				</div>

				<div id="product-manage-info-box" class="box one border center ground padding-10 margin-top-10" style="display:none">
					<h3 id="product-manage-info-title" class="Army underline"></h3>
					<table id="product-manage-info-table" class="tbl-info width-fill"></table>
				</div>

				<div id="product-manage-image-box" class="box one ground border center padding-10 margin-top-10" style="display:none">
					<button class="box one box-hover border center height-30 margin-top-10 bold" onclick="lib.displayDiv('product-manage-image-div', this, '⇓ Mostrar Imagem ⇓', '⇑ Esconder Imagem ⇑');">⇑ Esconder Imagem ⇑</button>
					<div id="product-manage-image-div" class="box one center ground padding-10 margin-top-10">
						<img id="product-manage-image-img" class="image-box" src="">
						<div class="box one center ground padding-10 margin-top-10">
							<button id="product-manage-image-remove-button" class="btn-delete">Excluir Imagem</button>
						</div>
						<% include ./../partials/carousel %>
					</div>
				</div>

				<div id="product-manage-menu-box" class="box one ground border center padding-10 margin-top-10" style="display:none">
					<button class="box one box-hover border center height-30 margin-top-10 bold" onclick="lib.displayDiv('product-manage-menu-div', this, '⇓ Mostrar Menu ⇓', '⇑ Esconder Menu ⇑');">⇓ Mostrar Menu ⇓</button>
					<div id="product-manage-menu-div"class="box one container ground padding-10 margin-top-10" style="display:none"></div>
				</div>

				<div id="product-feedstock-add-box" class="box one container ground border margin-top-10" style="display:none">
					<form id="feedstock-filter-form" class="box two container center ground padding-10 margin-top-10">
						<fieldset class="box one container fieldset-generic padding-5">
							<legend>Filtrar Matérias-Prima</legend>
							<input type="hidden" name="location" value="product-feedstock-add">
							<input type="text" name="feedstock_code" class="box two input-generic margin-top-5 center" placeholder="Cód" autocomplete="off">
							<input type="text" name="name" class="box two input-generic margin-top-5 center" placeholder="Nome" autocomplete="off">
							<select name="color" class="box two input-generic margin-top-5 center">
								<option value="">Cor</option>
								<% for(i in feedstockColors){ %>
									<option value="<%= feedstockColors[i].shortcut %>"><%= feedstockColors[i].name %></option>
								<% } %>
							</select>
							<input type="submit" class="box two submit-generic center margin-top-5 bold" value="Filtrar">
						</fieldset>
					</form>

					<form id="product-feedstock-add-form" class="box two container center ground padding-10 margin-top-10">
						<fieldset class="box one container fieldset-generic padding-5">
					    	<legend>Adicionar Matéria-Prima</legend>
							<input type="hidden" name="id" value="">
							<input type="hidden" name="product_id">
							<select name="feedstock_id" class="box two input-generic margin-top-5 bold hide-disabled" onchange="Product.controller.feedstock.form.inputs(this)"></select>
							
							<!-- <input type="hidden" name="feedstock_uom" value=""> -->
							<input type="number" name="feedstock_amount" class="box two input-generic margin-top-5 center bold" step="1" placeholder="qtd" onfocus="if(this.value < 1){this.value=''}" onblur="if(this.value < 1){this.value=''}"/ disabled>
							<input type="number" name="feedstock_measure" class="box two input-generic margin-top-5 center bold" step="0.01" placeholder="cm" onfocus="if(this.value < 0.5){this.value=''}" onblur="if(this.value < 0.00){this.value=''}"/ disabled>
							<select name="feedstock_category_id" class="box two input-generic margin-top-5 hide-disabled">
								<option value="0">Sem Categoria</option>
							</select>
							
							<input type="submit" name="submit" class="box one submit-generic box-hover center margin-top-5 bold" value="Cadastrar">
					  	</fieldset>
					</form>

					<button class="box one submit-generic border center margin-top-10 bold" onclick="lib.displayDiv('product-feedstock-category-create-form', this, '⇓ Nova Categoria ⇓', '⇑ Esconder Formulário ⇑')">⇓ Nova Categoria ⇓</button>
					<form id="product-feedstock-category-create-form" class="box one container margin-top-10" style="display:none">
						<fieldset class="box one container fieldset-generic padding-5 center">
							<legend>Nova Categoria</legend>
							<input type="hidden" name="id">
							<input type="hidden" name="product_id">
							<input type="text" name="category_name" class="box two input-generic margin-top-5 center" placeholder="Nome da categoria" autocomplete="off">
							<input type="submit" name="submit" class="box two submit-generic box-hover margin-top-5 center bold" value="Cadastrar">
						</fieldset>
					</form>
				</div>

				<div class="box one center ground padding-10 margin-top-10" id="product-feedstock-box" style="display:none">
					<div id="product-feedstock-list-box"></div>
    				<% include ./../partials/carousel %>
				</div>
			</div>
		</section>
		<div id="ajax-loader" class="ajax-loader">
			<div class="loader"></div>
		</div>
	</body>
	<footer>
        <% include ./../partials/footer %>
        <% include ./partial %>
        <script src="/javascripts/scripts/product/controller/manage.js"></script>
        <script src="/javascripts/scripts/product/view/manage.js"></script>

        <script src="/javascripts/scripts/feedstock/main.js"></script>
        <script src="/javascripts/scripts/feedstock/tables.js"></script>
	</footer>
</html>