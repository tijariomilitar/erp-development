<html>
	<head>
        <% include ./../partials/head %>
	</head>
	<body>
		<% include ./../partials/header %>
        <% include ./../partials/nav %>
		<section>
			<div class="container">
				<div class="box-1">
					<h4>Comprar Mat√©ria-Prima</h4>
					<form id="feedstock-supplier-storage-filter-form" class="box-1">
						<input type="hidden" name="location" value="purchaseFeedstock">
						<select name="supplier_id" class="btn-generic-medium">
							<option value="">Fornecedor</option>
							<% for(i in feedstockSuppliers){ %>
								<option value="<%= feedstockSuppliers[i].id %>"><%= feedstockSuppliers[i].name %></option>
							<% } %>
						</select>
						<input type="submit" id="feedstock-supplier-storage-filter-submit" class="btn-submit" value="Filtrar">
					</form>
					<form class="box-1" id="feedstock-purchase-kart-form">
						<select name="feedstock_id" class="btn-generic-big"></select>
						<input type="number" name="feedstock_amount" class="btn-generic-small price" step="0.01" placeholder="cm/un" onfocus="if(this.value < 0.01){this.value=''}" onblur="if(this.value < 0.01){this.value='0.00'}"/>
						<input type="submit" class="btn-submit" id="feedstock-purchase-kart-submit" value="Adicionar">
					</form>
					<table id="feedstock-purchase-kart-tbl" class="tbl-info box-1"></table>
				</div>
				<div class="box-1">
					<form id="feedstock-purchase-form" class="box-1">
						<h3 class="underline">Incluir Compra em</h3>
						<select name="storage_id" class="btn-generic-medium">
							<option value="">Estoque</option>
							<% for(i in feedstockStorages){ %>
								<option value="<%= feedstockStorages[i].id %>"><%= feedstockStorages[i].name %></option>
							<% } %>
						</select>
						<input type="submit" name="submit" class="btn-submit" value="Confirmar">
					</form>
				</div>
			</div>
		</section>
		<div id="ajax-loader" class="ajax-loader">
			<div class="loader"></div>
		</div>
	</body>
	<footer>
        <% include ./../partials/footer %>
        <% include ./partial %>
		<script src="/javascripts/scripts/feedstock/supplier.js"></script>
		<script src="/javascripts/scripts/feedstock/purchase.js"></script>
	</footer>
</html>